@page
@model JOBSSys_0002.Pages.Pessoas.CreateModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastro</h2>

<h4>Profissional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pessoa.Nome" class="control-label"></label>
                <input asp-for="Pessoa.Nome" class="form-control" placeholder="Nome Completo" />
                <span asp-validation-for="Pessoa.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Endereco" class="control-label"></label>
                <input asp-for="Pessoa.Endereco" class="form-control" placeholder="Endereço(N° Opcional)" />
                <span asp-validation-for="Pessoa.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Cidade" class="control-label"></label>
                <input asp-for="Pessoa.Cidade" class="form-control" placeholder="Ex: Curitiba" />
                <span asp-validation-for="Pessoa.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Estado" class="control-label"></label>
                <input asp-for="Pessoa.Estado" class="form-control" placeholder="Ex: Paraná" />
                <span asp-validation-for="Pessoa.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Telefone" class="control-label"></label>
                <input asp-for="Pessoa.Telefone" class="form-control" placeholder="Ex: Telefone" />
                <span asp-validation-for="Pessoa.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Email" class="control-label"></label>
                <input asp-for="Pessoa.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Pessoa.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Senha" class="control-label"></label>
                <input asp-for="Pessoa.Senha" class="form-control" type="password" placeholder="Senha para o site" />
                <span asp-validation-for="Pessoa.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Profissao" class="control-label"></label>
                <input asp-for="Pessoa.Profissao" class="form-control" placeholder="Ex: Pedreiro" />
                <span asp-validation-for="Pessoa.Profissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.TaxaVisitacao" class="control-label"></label>
                <input asp-for="Pessoa.TaxaVisitacao" class="form-control" placeholder="É cobrada taxa de visitação?" />
                <span asp-validation-for="Pessoa.TaxaVisitacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Avaliacao" class="control-label"></label>
                <input asp-for="Pessoa.Avaliacao" class="form-control" placeholder="Avaliação Do Serviço" />
                <span asp-validation-for="Pessoa.Avaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
